{# templates/wild/show.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}{% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ season.description }}</p>
            <p>Categorie : {{ program.category.name }}</p>
            <h1>Liste des épisodes</h1>
                <h2>Episode {{ episode.number }} - {{ episode.title }} </h2>
                <p>Description de l'épisode : {{ episode.synopsis }}</p>
            <a href="{{ path('season', {'id':season.id }) }}">Détails de la saison</a><br>
{#            <a href="{{ path('wild_show', {'id':season.id }) }}">Clique pour voir les épisodes</a>#}
            <a href="{{ path('wild_show', {slug : program.title }) }}">
            Détails de la série
            </a>



        </div>
    </div>

    <a href="{{ path('wild_index') }}">
        Retour à l'accueil
    </a>

{% endblock %}